<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000">

    <android.support.v7.widget.CardView
        android:id="@+id/question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/md_blue_grey_800"
        app:cardCornerRadius="0dp"
        app:cardElevation="6dp"
        app:contentPaddingBottom="48dp"
        app:contentPaddingTop="@dimen/questions_status_height">

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingTop="@dimen/status_bar_height"
            android:textColor="@color/md_white_1000"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="How did someone do something?" />
    </android.support.v7.widget.CardView>

    <com.example.dombaev_yury.opentrivia.util.AnswersView
        android:layout_width="match_parent"
        android:id="@+id/answers_view"
        android:layout_height="match_parent"
        android:layout_below="@id/question_card"
        android:paddingBottom="@dimen/nav_bar_height" />
</RelativeLayout>